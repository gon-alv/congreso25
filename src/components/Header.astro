---
//import type { AstroComponentFactory } from "astro";
import "../styles/global.css";

const navItems = [
  { label: "Inicio", href: "/" },
  { label: "Historia", href: "/historia" },
  { label: "Organización", href: "/equipo" },
  { label: "Programa", href: "/programa" },
  { label: "Inscripciones", href: "/#" },
  { label: "Contacto", href: "/contacto" },
];
---

head
<header
  class="fixed top-0 left-0 w-full bg-[var(--primary-color)] z-[999] shadow-xl"
>
  <div
    class="max-w-7xl mx-auto flex items-center justify-between px-4 py-3 md:py-4"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-2">
      <img src="/src/images/logo.png" alt="Logo" class="h-15 w-auto" />
    </a>

    <!-- Botón de menú (solo visible en móvil) -->
    <button
      id="menu-toggle"
      class="md:hidden p-2 rounded focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)]"
      aria-label="Abrir menú"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Navegación (desktop) -->
    <nav
      class="hidden md:flex font-bold absolute left-1/2 transform -translate-x-1/2 space-x-6 text-white"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="hover:text-[var(--active-text)] transition"
          >
            {item.label}
          </a>
        ))
      }
    </nav>
  </div>

  <!-- Menú móvil desplegable -->
  <div
    id="mobile-menu"
    class="hidden md:hidden px-4 pb-4 bg-white border-t border-gray-200"
  >
    {
      navItems.map((item) => (
        <a
          href={item.href}
          class="block py-2 text-gray-800 hover:text-[var(--active-text)]"
        >
          {item.label}
        </a>
      ))
    }
  </div>

  <script type="module">
    const toggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    toggle?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });
  </script>
</header>
