---
import '../styles/global.css';
interface Props {
    title: string;
};

const { title } = Astro.props;
---
<main>
    <div class="text-justify m-5 transparent rounded-lg p-4">
        <h1>{title}</h1>
        <slot />
    </div>
</main>
<style>
    main{
        background-color: rgba(158, 149, 232, 0.568);
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 150px;
    }
    h1 {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>